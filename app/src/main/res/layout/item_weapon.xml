<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewBinderModel"
            type="com.free.newtft.features.main.weapon.adapter.WeaponAdapter.ViewBinderModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="@{()-> viewBinderModel.onClick()}"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgChamp"
            loadImage="@{viewBinderModel.weapon.imgUrl}"
            android:layout_width="@dimen/dp_61"
            android:layout_height="@dimen/dp_61"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@drawable/border_gold"
            android:contentDescription="@string/no_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{viewBinderModel.weapon.name}"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:text="Refracted Dragon's Claw" />
    </LinearLayout>

</layout>

