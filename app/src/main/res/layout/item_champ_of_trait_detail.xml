<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewBinderModel"
            type="com.free.newtft.features.details.champ_detail.viewbinder.TraitsDetailViewBinder.ChampAdapter.ViewBinderModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgChamp"
            loadImage="@{viewBinderModel.champ.imgUrl}"
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_41"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_4"
            android:contentDescription="@string/no_image"
            android:onClick="@{()->viewBinderModel.onClick()}"
            tools:src="@tools:sample/avatars" />
    </LinearLayout>

</layout>