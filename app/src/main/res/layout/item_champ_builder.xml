<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="champBuilder"
            type="com.free.newtft.features.main.build_team.viewbinder.ChampBuilderViewBinder.ViewBinderModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            loadImage="@{champBuilder.champ.imgUrl}"
            setBorderColor="@{champBuilder.champ.cost}"
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_41"
            android:layout_margin="@dimen/dp_8"
            android:layout_gravity="center"
            android:contentDescription="@string/no_image"
            tools:src="@tools:sample/avatars" />
    </LinearLayout>
</layout>